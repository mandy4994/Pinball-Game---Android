<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pin_ball_menu_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="40dp"
        android:text="@string/pin_ball_menu_title"
        android:textColor="@color/pin_ball_menu_text"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:baselineAligned="false"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/pin_ball_menu_btn_background"
            android:onClick="StartGame"
            android:text="@string/pin_ball_menu_btn2"
            android:textColor="@color/pin_ball_menu_btn_text" />

        <Button
            android:id="@+id/buttonAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/pin_ball_menu_btn_background"
            android:onClick="AboutGame"
            android:text="@string/pin_ball_menu_btn4"
            android:textColor="@color/pin_ball_menu_btn_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonScoreList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/pin_ball_menu_btn_background"
            android:gravity="center"
            android:text="@string/pin_ball_menu_btn3"
            android:textColor="@color/pin_ball_menu_btn_text" />

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/pin_ball_menu_btn_background"
            android:gravity="center"
            android:onClick="ExitGame"
            android:text="@string/pin_ball_menu_btn5"
            android:textColor="@color/pin_ball_menu_btn_text" />

    </LinearLayout>

</LinearLayout>